<div class="markets-renewable-energy-tabs-wind-body-container-bg">
  <div class="markets-renewable-energy-tabs-wind-body-container" id="markets-renewable-energy-tabs-wind-container">
  </div>
</div>

<script>
  // JSON Data for Sections
  const windData = [
    {
      id: "Grounding-Static-Wire",
      intro: "Wind Turbine Construction Materials: Wire & Cable",
      image: "{{ 'm-tab-4.png' | asset_url }}",
      buttons: [
        {
          label: "What are Wind Farm Cables?",
          content: `
<h3 class="markets-renewable-energy-tabs-wind-body-subtitle">What are Wind Farm Cables?</h3>
<p class="markets-renewable-energy-tabs-wind-body-content">
Wind farm cables are the conductors used within wind farms, as well as those used to connect large-scale wind power to the electrical grid.
</p>
`
        },
        {
          label: "Types of Wind Farm Cables",
          content: `
<h3 class="markets-renewable-energy-tabs-wind-body-subtitle">Types of Wind Farm Cables?</h3>
<p class="markets-renewable-energy-tabs-wind-body-content">
Types of Wind Farm Cables essential components used in transmission lines for lightning protection and grounding.
</p>
`
        },
        {
          label: "Selection Considerations",
          content: `
<h3 class="markets-renewable-energy-tabs-wind-body-subtitle">Selection Considerations?</h3>
<p class="markets-renewable-energy-tabs-wind-body-content">
Selection Considerations essential components used in transmission lines for lightning protection and grounding.
</p>
`
        }
      ]
    },

  ];

  // Render Sections from JSON
  document.addEventListener("DOMContentLoaded", () => {
    const container = document.getElementById("markets-renewable-energy-tabs-wind-container");

    // Render each section
    windData.forEach((section, index) => {
      const backgroundColor = index % 2 === 0 ? "#F2F4F7" : "#fff";

      // Tạo một div bọc toàn bộ section
      const wrapperElement = document.createElement("div");
      wrapperElement.className = "markets-renewable-energy-tabs-wind-body-wrapper";
      wrapperElement.style.backgroundColor = backgroundColor;

      const mainElement = document.createElement("div");
      mainElement.className = "markets-renewable-energy-tabs-wind-body-main";
      mainElement.innerHTML = `

`;


      const sectionElement = document.createElement("div");
      sectionElement.className = "markets-renewable-energy-tabs-wind-body-section container-width";
      sectionElement.id = section.id;

      // check index to convert attribute of class
      if (index % 2 !== 0) {
        sectionElement.style.flexDirection = "row-reverse";
      }

      sectionElement.innerHTML = `
<div class="markets-renewable-energy-tabs-wind-body-left">
<img src="${section.image}" alt="${section.title}" class="markets-renewable-energy-tabs-wind-body-image">
</div>
<div class="markets-renewable-energy-tabs-wind-body-right">
<h2 class="markets-renewable-energy-tabs-body-title title-section">${section.intro}</h2>
<div class="markets-renewable-energy-tabs-wind-body-buttons">
${section.buttons
          .map(
            (button, index) =>
              `<button class="markets-renewable-energy-tabs-wind-body-button ${index === 0 ? "active" : ""
              }" data-content="${section.id}-${index}">${button.label}</button>`
          )
          .join("")}
</div>
<div class="markets-renewable-energy-tabs-wind-body-content-container">
${section.buttons[0].content} <!-- Default content -->
</div>
</div>
`;

      wrapperElement.appendChild(mainElement);
      wrapperElement.appendChild(sectionElement);

      // Thêm wrapper vào container chính
      container.appendChild(wrapperElement);
    });

    // Add click listeners to buttons
    const sections = document.querySelectorAll(".markets-renewable-energy-tabs-wind-body-section container-width");

    sections.forEach((section) => {
      const buttons = section.querySelectorAll(".markets-renewable-energy-tabs-wind-body-button");
      const contentContainer = section.querySelector(
        ".markets-renewable-energy-tabs-wind-body-content-container"
      );

      buttons.forEach((button, index) => {
        button.addEventListener("click", () => {
          // Remove active class from all buttons in the section
          buttons.forEach((btn) => btn.classList.remove("active"));

          // Add active class to clicked button
          button.classList.add("active");

          // Update content
          const contentKey = `${section.id}-${index}`;
          const content = windData
            .find((s) => s.id === section.id)
            .buttons[index].content;

          contentContainer.innerHTML = content;
        });
      });
    });
  });
</script>