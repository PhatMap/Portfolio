    {% render 'custom-breadcrumb',
      paths: 'Services, Emergency Response Services',
      urls: '/pages/cable-management, /pages/emergency-response-services'
    %}

    <div style="margin: 0 0 28px 0 ">
      {% if section.settings.contentOne != blank %}
        {{ section.settings.contentOne }}
      {% endif %}
    </div>
    <div class="service-emergency-response-head-1">
      <div class="service-emergency-response-head-1-section">
        <h2>{{ section.settings.titleOne }}</h2>
        {% if section.settings.contentTwo != blank %}
          {{ section.settings.contentTwo }}
        {% endif %}
      </div>
      <div class="service-emergency-response-head-1-section">
        <h2>{{ section.settings.titleTwo }}</h2>
        {% if section.settings.contentThree != blank %}
          {{ section.settings.contentThree }}
        {% endif %}
      </div>
    </div>

    <div class="service-emergency-response-section-2">
      <div class="service-emergency-response-section-2-left">
        <h1>{{ section.settings.titleThree }}</h1>
        {% if section.settings.contentFour != blank %}
          {{ section.settings.contentFour }}
        {% endif %}
        <ul>
          {% for block in section.blocks %}
            {% if block.type == 'liOne' %}
              <li>
                {% if block.settings.content != blank %}
                  {{ block.settings.content }}
                {% endif %}
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>
      <div class="service-emergency-response-section-2-right">
        <div class="service-emergency-response-tabs">
          <div class="service-emergency-response-tabs-container">
            {% for block in section.blocks %}
              {% if block.type == 'slider_img' %}
                {% if block.settings.image != blank %}
                  <img
                    class="service-emergency-response-tab"
                    src="{{  block.settings.image  | image_url }}"
                    alt="empty"
                    width="300px"
                    height="300px"
                  >
                {% endif %}
              {% endif %}
            {% endfor %}
          </div>

          <div class="service-emergency-response-tabs-navigator" id="service-emergency-response-tabs-navigator">
            {% for block in section.blocks %}
              {% if block.type == 'slider_img' %}
                <div
                  class="service-emergency-response-tabs-navigator-dot"
                  id="dot-{{ forloop.index0 }}"
                  onClick="chooseTab('{{ forloop.index0 }}')"
                ></div>
              {% endif %}
            {% endfor %}
          </div>

          <style>
            .service-emergency-response-tabs {
              width: 100%;
              height: 466px;
              border-radius: 8px;
              overflow: hidden;
              position: relative;
            }

            .service-emergency-response-tabs-container {
              display: flex;
              width: 500%;
              transition: transform 0.5s ease-in-out;
              height: 100%;
            }

            .service-emergency-response-tabs-container img {
              width: 748px;
              height: 100%;
              flex-shrink: 0;
            }

            .service-emergency-response-tabs-navigator {
              position: absolute;
              display: flex;
              gap: 6px;
              width: 64px;
              height: 8px;
              transform: translateX(-50%);
              bottom: 16px;
              left: 50%;
              z-index: 1;
            }

            .service-emergency-response-tabs-navigator-dot {
              display: block !important;
              width: 8px;
              height: 8px;
              border-radius: 100%;
              background-color: white;
              opacity: 50%;
              cursor: pointer;
              transition: opacity 0.3s;
            }
            .service-emergency-response-tabs-navigator-dot.active {
              opacity: 1;
              background-color: white;
            }
          </style>

          <script>
            let currentTab = 0;
            let autoSwitch;

            function chooseTab(tabIndex) {
              currentTab = parseInt(tabIndex - 3, 10);
              updateSlider();
              resetAutoSwitch();
            }

            function updateSlider() {
              const container = document.querySelector('.service-emergency-response-tabs');
              if (!container) return;

              let width = container.offsetWidth;

              if (typeof currentTab === 'undefined') {
                console.warn('currentTab is not defined');
                return;
              }

              const tab = document.querySelector('.service-emergency-response-tabs-container');
              if (tab) {
                tab.style.transform = `translateX(-${currentTab * width}px)`;
              }

              document.querySelectorAll('.service-emergency-response-tabs-navigator-dot').forEach((dot, index) => {
                dot.classList.toggle('active', index === currentTab);
              });
            }

            function startAutoSwitch() {
              autoSwitch = setInterval(() => {
                currentTab = (currentTab + 1) % 5;
                updateSlider();
              }, 3000);
            }

            function resetAutoSwitch() {
              clearInterval(autoSwitch);
              startAutoSwitch();
            }

            document.addEventListener('DOMContentLoaded', () => {
              const container = document.querySelector('.service-emergency-response-tabs');
              if (!container) return;

              let width = container.offsetWidth;

              const tabImg = document.querySelectorAll('.service-emergency-response-tab');
              tabImg.forEach((tab) => {
                tab.style.width = `${width}px`;
              });

              updateSlider();
              startAutoSwitch();
            });
          </script>
        </div>
      </div>
    </div>

    <div class="service-emergency-response-section-3">
      <h1>{{ section.settings.titleFour }}</h1>
      {% if section.settings.contentFive != blank %}
        {{ section.settings.contentFive }}
      {% endif %}
    </div>

    <div class="service-emergency-response-section-4">
      <h1>{{ section.settings.titleFive }}</h1>

      {% if section.settings.contentSix != blank %}
        {{ section.settings.contentSix }}
      {% endif %}
      {% if section.settings.contentSeven != blank %}
        <div>
          {{
            section.settings.contentSeven
            | replace: '<p>', '<p class="service-emergency-response-section-4-marked">'
          }}
        </div>
      {% endif %}
    </div>
  </div>
</div>
<div class="service-emergency-response-section-5-bg">
  <div class="service-emergency-response-section-5-content">
    <div class="service-emergency-response-section-5">
      <div class="service-emergency-response-section-5-head">
        <h1>{{ section.settings.titleSix }}</h1>
        {% if section.settings.contentEight != blank %}
