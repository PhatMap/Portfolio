        {% endif %}
      </div>
      <div class="service-emergency-response-list">
        {% for block in section.blocks %}
          {% if block.type == 'image_text' %}
            <a href="{{ block.settings.link | image_url }}" class="service-emergency-response-list-item">
              <img src="{{ block.settings.image | image_url }}" alt="empty" width="200px" height="250px">
              <p>{{ block.settings.title }}</p>
            </a>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

